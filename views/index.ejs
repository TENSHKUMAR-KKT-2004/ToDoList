<%-include('header')%>

<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>

<div class="box">

  <% newListItem.forEach(function(list){%>
  <div class="item">
    <input type="checkbox">
    <p><%=list.name %></p>
  </div>
  <% }) %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button><!-- value of the "listTitle" will be "Work" -->
  </form>

</div>

<%-include('footer')%>
