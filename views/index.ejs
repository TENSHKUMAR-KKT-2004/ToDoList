<%-include('header')%>

<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>

<div class="box">

  <% newListItem.forEach(function(list){%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="id" value="<%= list._id%>" onChange="this.form.submit()">
        <p><%=list.name %></p>
      </div>
    </form>

  <% }) %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button><!-- value of the "listTitle" will be "Work" -->
  </form>

</div>

<%-include('footer')%>
